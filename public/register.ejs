<!-- register.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Signup</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 font-sans leading-normal tracking-normal">
    <div class="container mx-auto leading-normal">
        <header class="bg-gray-900 p-6 shadow-md">
            <div class="container mx-auto flex justify-between items-center">
                <h1 class="text-white text-xl">Register</h1>
            </div>
        </header>
    </div>
    

    <div class="container mx-auto mt-8">

        <div class="w-full max-w-xs mx-auto bg-white p-8 rounded shadow-md">

            <h1 class="text-2xl font-bold mb-4 text-center">Signup</h1>

            <form action="/register" method="post">

                <div class="mb-4">
                    <label for="username" class="block text-gray-700">Username</label>
                    <input type="text" id="username" name="username" required
                           class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50"
                           oninput="validateUsername()">
                    <div class="text-green-700" id="usernameAvailability"></div>
                </div>
                

                <div class="mb-4">
                    <label for="email" class="block text-gray-700">Email</label>
                    <input type="email" id="email" name="email" required
                           class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50">
                </div>

                <div class="mb-6">
                    <label for="password" class="block text-gray-700">Password</label>
                    <input type="password" id="password" name="password" required
                           class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50">
                </div>

                <div class="flex items-center justify-center">
                    <button type="submit" class="bg-indigo-500 text-white px-4 py-2 rounded hover:bg-indigo-600 focus:outline-none focus:bg-indigo-600">
                        Signup
                    </button>
                </div>

            </form>
        </div>

    </div>
    <script>
        function validateUsername() {
            const usernameInput = document.getElementById('username');
            const input = usernameInput.value;
            const isValid = /^[a-zA-Z0-9_@]+$/.test(input);
            if (!isValid) {
                usernameInput.value = input.slice(0, -1);
                alert("Only letters, numbers, and '@','_' are allowed.");
            }
            checkUsernameAvailability();
        }
        async function checkUsernameAvailability() {
            const usernameInput = document.getElementById('username').value;
            try {
                const response = await fetch(`/check-username?username=${usernameInput}`);
                const data = await response.json();
                const availabilityDiv = document.getElementById('usernameAvailability');
                if (data.available) {
                    availabilityDiv.innerHTML = 'Username is available.';
                    availabilityDiv.classList.remove('text-red-700');
                    availabilityDiv.classList.add('text-green-700');
                } else {
                    availabilityDiv.innerHTML = 'Username is not available.';
                    availabilityDiv.classList.remove('text-green-700');
                    availabilityDiv.classList.add('text-red-700');
                }
            } catch (error) {
                console.error('Error checking username availability:', error);
            }
        }
    </script>
        
</body>
</html>
